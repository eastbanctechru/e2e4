{
    "extends": "tslint:latest",
    "rules": {
        "jsdoc-format": true,
        "interface-name": [
            true,
            "never-prefix"
        ],
        "linebreak-style": [true, "LF"],
        "max-line-length": [
            true,
            240
        ],
        "no-default-export": true,
        "no-inferrable-types": [
            false
        ],
        "no-mergeable-namespace": true,
        "no-require-imports": true,
        "no-switch-case-fall-through": true,
        "no-use-before-declare": false,
        "no-unused-expression": false,
        "one-variable-per-declaration": [
            true
        ],
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": "never"
            }
        ],
        "typedef": [
            true,
            "call-signature",
            "parameter",
            "arrow-parameter",
            "property-declaration",
            "member-variable-declaration"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type"
        ]
    },
    "jsRules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "trailing-comma": [
            false
        ]
    }
}