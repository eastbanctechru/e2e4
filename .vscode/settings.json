// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/esm": true,
        "**/*.d.ts": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": {
            "when": "$(basename)"
        },
        "**/*.js": {
            "when": "$(basename).ts"
        }
    },
    "search.exclude": {
        "**/docs": true,
        "**/esm": true,
        "**/coverage": true
    },
    "editor.formatOnSave": false,
    "prettier.tabWidth": 4,
    "prettier.printWidth": 120,
    "prettier.singleQuote": true,
    "typescript.tsdk": "./node_modules/typescript/lib"
}
